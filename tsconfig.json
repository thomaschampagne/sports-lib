{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
